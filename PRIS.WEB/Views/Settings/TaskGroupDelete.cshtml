@model PRIS.WEB.Models.TaskGroup

@{
    ViewData["Title"] = "TaskGroupDelete";
    ViewData["ActivePage"] = PRIS.WEB.Views.Shared.ManageCollumnNavPages.TaskGroup;
    Layout = "~/Views/Shared/_LayoutNavSectionForSettings.cshtml";
}

<p class="text-danger">@ViewData["ErrorMessage"]</p>
<h3>Ar tikrai norite ištrinti šį įrašą?</h3>
<div>
    <hr />
    <br />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="TaskGroupName" class="control-label">Užduočių grupė</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskGroupName)
        </dd>
    </dl>

    <form asp-action="TaskGroupDelete">
        <input type="hidden" asp-for="TaskGroupID" />
        <input type="submit" value="Pašalinti" class="btn btn-danger" /> |
        <a asp-action="TaskGroup">Grįžti į sąrašą</a>
    </form>
</div>