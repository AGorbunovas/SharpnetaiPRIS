@model PRIS.WEB.Models.TaskGroup

@{
    ViewData["Title"] = "TaskGroup";
    ViewData["ActivePage"] = PRIS.WEB.Views.Shared.ManageCollumnNavPages.TaskGroup;
    Layout = "~/Views/Shared/_LayoutNavSectionForSettings.cshtml";
}

<h4>Užduočių grupės sukūrimas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TaskGroupCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskGroupName" class="control-label">Užduočių grupė</label>
                <input asp-for="TaskGroupName" class="form-control" />
                <span asp-validation-for="TaskGroupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Išsaugoti" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>