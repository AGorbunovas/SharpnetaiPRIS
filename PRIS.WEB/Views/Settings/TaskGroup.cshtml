@model IEnumerable<PRIS.WEB.Models.TaskGroup>

@{
    ViewData["Title"] = "TaskGroup";
    ViewData["ActivePage"] = PRIS.WEB.Views.Shared.ManageCollumnNavPages.TaskGroup;
    Layout = "~/Views/Shared/_LayoutNavSectionForSettings.cshtml";
}

<h5>Akademija.IT užduočių grupės</h5>
<hr />
<br />
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">
    <div class="col-md-6">
        <p>
            <a asp-action="TaskGroupCreate" class="btn btn-outline-dark" role="button">Sukurti</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">
                        Užduočių grupė
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TaskGroupName)
                        </td>
                        <td>
                            <a asp-action="TaskGroupDelete" asp-route-id="@item.TaskGroupID" class="btn btn-sm btn-outline-danger" role="button">Trinti</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>