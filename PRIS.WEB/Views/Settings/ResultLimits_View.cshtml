@model IEnumerable<PRIS.WEB.ViewModels.ResultLimitViewModel.ResultMaxLimitViewModel>

@{
    ViewData["Title"] = "ResultLimits_View";
    ViewData["ActivePage"] = PRIS.WEB.Views.Shared.ManageCollumnNavPages.ResultLimits_View;
    Layout = "~/Views/Shared/_LayoutNavSectionForSettings.cshtml";
}

<h5>Čia galite redaguoti testo užduočių balų rėžius</h5>
<hr />
<br />

<p>
    <a asp-action="ResultLimits_Create" class="btn btn-outline-dark" role="button">Pridėti balų rėžius</a>
</p>

<table class="table table-bordered table-responsive-lg">
    <thead>
        <tr>
                <th rowspan="1" colspan="1"></th>
                <th rowspan="1" colspan="3" class="text-center">@Html.DisplayNameFor(model => model.TaskGroups[0])</th>
                <th rowspan="1" colspan="3" class="text-center">@Html.DisplayNameFor(model => model.TaskGroups[1])</th>
                <th rowspan="1" colspan="4" class="text-center">@Html.DisplayNameFor(model => model.TaskGroups[2])</th> 
                <th rowspan="1" colspan="1"></th>
                <th rowspan="1" colspan="1"></th>
        </tr>
        <tr>
            <th class="text-center">
                Užduoties nr.
            </th>
            
            @foreach (var item in Model)
            {
                <th>
                    @item.TestTemplate.TestTask.TaskId
                </th>
            }


            <th class="text-center">Bendras testo balas</th>
            <th class="text-center">Pridėjimo data</th>
        </tr>
    </thead>
    <tbody>

        <tr>
            <td></td>
            @foreach (var item in Model)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.TestTemplate.TestTask.MaxResultLimit)
                </td>

                @*<td>
                    @Html.DisplayFor(modelItem => item.ResultSumMax)
                </td>*@

                <td>
                    @Html.DisplayFor(modelItem => item.TestTemplate.DateTemplateSet)
                </td>
            }
        </tr>

    </tbody>
</table>
