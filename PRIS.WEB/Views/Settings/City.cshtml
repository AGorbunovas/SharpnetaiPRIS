@model IEnumerable<PRIS.WEB.Models.City>

@{
    ViewData["Title"] = "City";
    Layout = "~/Views/Shared/_LayoutNavSectionForSettings.cshtml";
}

<h5>Miestai, kuriuose vykdomos Akademija.IT mokymo programos</h5>
<br />
<div class="row">
    <div class="col-md-6">
        <p>
            <a asp-action="CityModalPartial">Pridėti miestą</a>
        </p>
        @* Zemiau uzkomentuoti elementai naudojami noritnt aktyvuoti Pop-up forma *@
        @*<div id="PlaceHolderHere"></div>
        <button type="button" class="btn btn-outline-dark" data-toggle="ajax-modal" data-target="#addCity" data-url="@Url.Action("CityCreate")">Pridėti</button>
        <button type="submit" class="btn btn-outline-dark" data-toggle="ajax-modal" data-target="#deleteCity" data-url="@Url.Action("Delete")">Trinti</button>*@
        <br />
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">
                        Miesto pavadinimas
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CityName)
                        </td>
                        <td>
                            <a asp-action="CityDelete" asp-route-id="@item.CityId">Trinti</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>





