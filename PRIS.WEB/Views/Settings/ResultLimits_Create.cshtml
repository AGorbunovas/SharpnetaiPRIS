@model PRIS.WEB.ViewModels.ResultLimitViewModel.ResultMaxLimitViewModel

@{
    ViewData["Title"] = "ResultLimits_Create";
    ViewData["ActivePage"] = PRIS.WEB.Views.Shared.ManageCollumnNavPages.ResultLimits_View;
    Layout = "~/Views/Shared/_LayoutNavSectionForSettings.cshtml";
}

<h5>Redaguoti testo užduočių maksimalių balų rėžius</h5>
<hr />
<br />
<div class="row">
    <div>
        <form class="form" asp-controller="Settings" asp-action="ResultLimits_Create">
            <div class="form-row mx-0">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label @*asp-for="ResultLimitsId"*@ class="control-label">Nustatykite užduoties balų rėžius įvesties langeliuose ties kiekvienos užduoties numeriu.</label>
                    <span @*asp-validation-for="ResultLimitsId"*@ class="text-danger"></span>
                </div>
                <div class="row">
                    @for (int i = 0; i < Model.TestTasks.Count; i++) { 
                    <div class="form-group col-2">
                        <label asp-for="@Model.TestTasks[i].TaskId" class="control-label">Nr. @Model.TestTasks[i].TaskId</label>
                        <input asp-for="@Model.TestTasks[i].MaxResultLimit" class="form-control" type="number" />
                        <span asp-validation-for="@Model.TestTasks[i].MaxResultLimit" class="text-danger"></span>
                    </div>
                    }
                </div>
            </div>
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-outline-dark">Išsaugoti</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/validationlocalization.js"></script>
}

