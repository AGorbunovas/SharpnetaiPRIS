@model IEnumerable<PRIS.WEB.ViewModels.TestViewModels.AddTestViewModel>

@{
    ViewData["Title"] = "Testai";
    ViewData["ActivePage"] = PRIS.WEB.Views.Shared.ManageCollumnNavPages.List;
    Layout = "~/Views/Shared/_LayoutWithNavSectionForTestView.cshtml";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateOfTest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                Mokslo metų laikotarpis
                @*@Html.DisplayNameFor(model => model.AcademicYears)*@
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfTest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.CityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcademicYear.AcademicYearStart)  ||  @Html.DisplayFor(modelItem => item.AcademicYear.AcademicYearEnd)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.TestId" class="btn btn-sm btn-outline-danger" role="button">Trinti</a>
            </td>
        </tr>
        }
    </tbody>
</table>
